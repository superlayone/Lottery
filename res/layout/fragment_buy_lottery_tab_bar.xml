<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tabbar"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/tabbar_menu1"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/tabmenu_back"
        android:text="玩法选择" />

	<Button
	    android:id="@+id/tabbar_menu2"
	    android:layout_width="150dp"
	    android:layout_height="60dp"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@id/tabbar_menu1"
	    android:background="@drawable/tabmenu_back"
	    android:text="玩法说明" />

	<Button
	    android:id="@+id/tabbar_menu3"
	    android:layout_width="150dp"
	    android:layout_height="60dp"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@id/tabbar_menu2"
	    android:background="@drawable/tabmenu_back"
	    android:text="投注" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_background" >

	<RelativeLayout
	    android:layout_width="450dp"
	    android:layout_height="420dp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="150dp"
	    android:background="@drawable/push_down_wide" >

    <LinearLayout
        android:id="@+id/ll_change_setting"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

	        <EditText
	            android:id="@+id/et_terminal_no"
	            android:digits="0123456789"
	            android:layout_width="400dp"
	            android:layout_height="40dp"
	            android:hint="@+string/terminal_no" >
	            <requestFocus />
	        </EditText>
	        <EditText
	            android:id="@+id/et_site_no"
	            android:digits="0123456789"
	            android:layout_width="400dp"
	            android:layout_height="40dp"
	            android:hint="@+string/site_no" />
	        <EditText
	            android:id="@+id/et_gateway"
	            android:digits="0123456789."
	            android:layout_width="400dp"
	            android:layout_height="40dp"
	            android:hint="@+string/gateway" />
	        <EditText
	            android:id="@+id/et_platform_IP"
	            android:layout_width="400dp"
	            android:layout_height="40dp"
	            android:hint="@+string/platform_IP" />
	        <EditText
	            android:id="@+id/et_platform_port"
	            android:layout_width="400dp"
	            android:layout_height="40dp"
	            android:hint="@+string/platform_port" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ll_change_setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/btn_change_cancel"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:background="@drawable/button_back"
            android:text="@+string/change_cancel"
            android:textColor="#555555" 
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btn_change_done"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_back3"
            android:text="@+string/change_done"
            android:textColor="#555555" 
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>